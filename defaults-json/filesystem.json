                "enum": [
                  "ascend",
                  "descend",
                  "modifiedlatest",
                  "modifiedearlier"
                ],
                "enumNames": [
                  "Name - Ascending",
                  "Name - Descending",
                  "Date - Last Modified",
                  "Date - Earliest Modified"
                ]
              },
              "optTop": {
                "title": "Top",
                "description": "Maximum number of files and directories to return in the result. Set to 0 or leave empty to return all items.",
