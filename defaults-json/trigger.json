    {
      "name": "Inject",
      "description": "Initiates workflow execution by injecting a payload at specified intervals or once. Acts as a starting point for automation flows.",
      "color": "#FDD835",
      "icon": "arrow-big-right-dash",
      "id": "Core.Trigger.Inject",
      "inputs": 0,
      "outputs": 1,
      "properties": [
        {
          "schema": {
            "title": "Input",
            "type": "object",
            "properties": {
              "inPayload": {
                "type": "object",
                "title": "Payload",
                "description": "The data to be injected into the workflow. This value will be passed as the initial payload for the automation flow.",
                "variableType": "String",
                "customScope": true,
                "jsScope": true,
                "argsScope": true,
                "properties": {
                  "scope": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "uiSchema": {
            "inPayload": {
              "ui:field": "variable"
            }
          },
          "formData": {
            "inPayload": {
              "scope": "JS",
              "name": "Date.now()"
            }
          }
        },
        {
          "schema": {
            "title": "Output",
            "type": "object",
            "properties": {
              "outPayload": {
                "type": "object",
                "title": "Payload",
                "description": "The injected payload data that will be passed to the next node in the workflow.",
                "variableType": "String",
                "messageOnly": true,
                "properties": {
                  "scope": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "uiSchema": {
            "outPayload": {
              "ui:field": "variable"
            }
          },
          "formData": {
            "outPayload": {
              "scope": "Message",
              "name": "payload"
            }
          }
        },
        {
          "schema": {
            "title": "Options",
            "type": "object",
            "properties": {
              "optRepeat": {
                "title": "Repeat Interval (sec)",
                "description": "Time interval in seconds between repeated executions. Only applies when 'Once' is disabled. Minimum value is 0.001 seconds.",
                "type": "number"
              },
              "optOnce": {
                "title": "Once",
                "description": "If true, the node executes only once after the specified delay. If false, it repeats at the specified interval.",
                "type": "boolean"
              },
              "optOnceDelay": {
                "title": "Once Delay (sec)",
                "description": "Initial delay in seconds before the first execution. Used both for single execution and as the first delay for repeated executions. Minimum value is 0.001 seconds.",
                "type": "number"
              }
            }
          },
          "uiSchema": {
            "ui:order": [
              "optRepeat",
              "optOnceDelay",
              "optOnce"
            ]
          },
          "formData": {
            "optRepeat": 1,
            "optOnce": true,
            "optOnceDelay": 0.1
          }
        }
      ]
    },
    {
      "name": "Catch",
      "description": "Catches and handles errors from specified nodes in the workflow. Subscribes to error events and triggers when errors occur in monitored nodes.",
      "color": "#E64A19",
      "icon": "octagon-alert",
      "id": "Core.Trigger.Catch",
      "inputs": 0,
      "outputs": 1,
      "properties": [
        {
          "schema": {
            "title": "Options",
            "type": "object",
            "inputs": 1,
            "outputs": 1,
            "properties": {
              "optNodes": {
                "type": "object",
                "title": "Target Nodes",
                "description": "Configuration for which nodes to monitor for errors. Select specific nodes by ID or choose to catch errors from all nodes in the workflow.",
                "properties": {
                  "ids": {
                    "title": "Node IDs",
                    "description": "Array of specific node IDs to monitor for errors. Only errors from these nodes will trigger this catch node.",
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "all": {
                    "title": "All Nodes",
                    "description": "If true, monitors all nodes in the current workflow scope for errors. If false, only monitors the nodes specified in the IDs array.",
                    "type": "boolean"
                  }
                }
              }
            }
          },
          "uiSchema": {
            "optNodes": {
              "ui:field": "catch"
            },
            "ui:order": [
              "optNodes"
            ]
          },
          "formData": {
            "optNodes": {
              "type": "catch",
              "ids": [],
              "all": false
            }
          }
        }
      ]
    },
