              "scope": "Custom",
              "name": "0"
            },
            "inY": {
              "scope": "Custom",
              "name": "0"
            }
          }
        },
        {
          "schema": {
            "title": "Options",
            "type": "object",
            "properties": {
              "optButtonType": {
                "type": "string",
                "title": "Mouse Button",
                "description": "Which mouse button to use for the click action. Left button is most common for regular clicks, right button for context menus.",
                "multiple": true,
                "enum": [
                  "left",
                  "center",
                  "right"
                ],
                "enumNames": [
                  "Left Button",
                  "Center Button",
                  "Right Button"
                ]
              },
              "optClickType": {
                "type": "string",
                "title": "Click Type",
                "description": "The type of click action to perform. Single click for most actions, double click for opening items, button press/release for drag operations.",
                "multiple": true,
                "enum": [
                  "single-click",
                  "double-click",
                  "button-press",
                  "button-release"
                ],
                "enumNames": [
                  "Single Click",
                  "Double Click",
                  "Button Press",
                  "Button Release"
                ]
              },
              "optKeyModifier": {
                "type": "string",
                "title": "Key Modifier",
                "description": "Optional keyboard key to hold while clicking. Use Ctrl for control-click, Shift for shift-click, etc. Set to None for regular clicks.",
                "multiple": true,
                "enum": [
                  "none",
                  "alt",
                  "ctrl",
                  "shift",
                  "win"
                ],
                "enumNames": [
                  "None",
                  "Alt",
                  "Ctrl",
                  "Shift",
                  "Win"
                ]
              }
            }
          },
          "uiSchema": {
            "ui:order": [
              "optButtonType",
              "optClickType",
              "optKeyModifier"
            ]
          },
          "formData": {
            "optButtonType": "left",
            "optClickType": "single-click",
            "optKeyModifier": "none"
          }
        }
      ]
    },
