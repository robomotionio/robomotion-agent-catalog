    {
      "name": "Mouse Click",
      "description": "Performs mouse clicks at specified coordinates with configurable button types, click modes, and key modifiers. Supports single/double clicks and press/release actions.",
      "color": "#0078DE",
      "icon": "mouse-pointer-click",
      "id": "Core.Mouse.Click",
      "inputs": 1,
      "outputs": 1,
      "properties": [
        {
          "schema": {
            "title": "Input",
            "type": "object",
            "properties": {
              "inX": {
                "type": "object",
                "title": "X Coordinate",
                "description": "The horizontal pixel position (X coordinate) on the screen where the mouse click should occur. Use 0 for the leftmost edge.",
                "variableType": "Integer",
                "customScope": true,
                "jsScope": true,
                "messageScope": true,
                "properties": {
                  "scope": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                }
              },
              "inY": {
                "type": "object",
                "title": "Y Coordinate",
                "description": "The vertical pixel position (Y coordinate) on the screen where the mouse click should occur. Use 0 for the topmost edge.",
                "variableType": "Integer",
                "customScope": true,
                "jsScope": true,
                "messageScope": true,
                "properties": {
                  "scope": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "uiSchema": {
