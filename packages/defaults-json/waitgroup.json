{
  "name": "Wait Group",
  "color": "#ed5c40",
  "icon": "alarm-clock",
  "nodes": [
    {
      "name": "WG Create",
      "version": "23.2.0",
      "description": "Creates a new wait group for synchronizing multiple concurrent tasks. Returns a unique wait group ID that can be used with other wait group nodes.",
      "color": "#ed5c40",
      "icon": "alarm-clock-plus",
      "id": "Core.WaitGroup.Create",
      "inputs": 1,
      "outputs": 1,
      "properties": [
        {
          "schema": {
            "title": "Output",
            "type": "object",
            "properties": {
              "outWaitGroupID": {
                "type": "object",
                "title": "Wait Group ID",
                "description": "A unique identifier for the created wait group. Use this ID with WG Add, WG Done, and WG Wait nodes to coordinate task synchronization.",
                "variableType": "String",
                "messageScope": true,
                "properties": {
                  "scope": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "uiSchema": {
            "outWaitGroupID": {
              "ui:field": "variable"
            }
          },
          "formData": {
            "outWaitGroupID": {
              "scope": "Message",
              "name": "wg_id"
            }
          }
        }
      ]
    },
    {
      "name": "WG Add",
      "version": "23.2.0",
      "description": "Adds the specified delta count to the wait group counter. Each add operation must be matched with corresponding done operations for the wait group to complete.",
      "color": "#ed5c40",
      "icon": "alarm-clock-plus",
      "id": "Core.WaitGroup.Add",
      "inputs": 1,
      "outputs": 1,
      "properties": [
        {
          "schema": {
            "title": "Input",
            "type": "object",
            "properties": {
              "inWaitGroupID": {
                "type": "object",
                "title": "Wait Group ID",
                "description": "The unique identifier of the wait group to add tasks to. Must match the ID returned by a WG Create node.",
                "variableType": "String",
                "messageScope": true,
                "properties": {
                  "scope": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "uiSchema": {
            "inWaitGroupID": {
              "ui:field": "variable"
            }
          },
          "formData": {
            "inWaitGroupID": {
              "scope": "Message",
              "name": "wg_id"
            }
          }
        },
        {
          "schema": {
            "title": "Option",
            "type": "object",
            "properties": {
              "optDelta": {
                "type": "object",
                "title": "Delta",
                "description": "The number of tasks to add to the wait group counter. Must be a positive integer. Each add operation requires a corresponding done operation to complete the wait group.",
                "variableType": "Integer",
                "messageScope": true,
                "customScope": true,
                "jsScope": true,
                "properties": {
                  "scope": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "uiSchema": {
            "optDelta": {
              "ui:field": "variable"
            }
          },
          "formData": {
            "optDelta": {
              "scope": "Custom",
              "name": "1"
            }
          }
        }
      ]
    },
    {
      "name": "WG Done",
      "version": "23.2.0",
      "description": "Marks one task as completed in the wait group by decrementing the counter. When the counter reaches zero, any waiting WG Wait nodes will be released.",
      "color": "#ed5c40",
      "icon": "alarm-clock-check",
      "id": "Core.WaitGroup.Done",
      "inputs": 1,
      "outputs": 0,
      "properties": [
        {
          "schema": {
            "title": "Input",
            "type": "object",
            "properties": {
              "inWaitGroupID": {
                "type": "object",
                "title": "Wait Group ID",
                "description": "The unique identifier of the wait group to mark a task as done. Must match the ID returned by a WG Create node.",
                "variableType": "String",
                "messageScope": true,
                "properties": {
                  "scope": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "uiSchema": {
            "inWaitGroupID": {
              "ui:field": "variable"
            }
          },
          "formData": {
            "inWaitGroupID": {
              "scope": "Message",
              "name": "wg_id"
            }
          }
        }
      ]
    },
    {
      "name": "WG Wait",
      "version": "23.2.0",
      "description": "Blocks execution until all tasks in the wait group are completed (counter reaches zero). The wait group is automatically cleaned up after completion.",
      "color": "#ed5c40",
      "icon": "alarm-clock-check",
      "id": "Core.WaitGroup.Wait",
      "inputs": 1,
      "outputs": 1,
      "properties": [
        {
          "schema": {
            "title": "Input",
            "type": "object",
            "properties": {
              "inWaitGroupID": {
                "type": "object",
                "title": "Wait Group ID",
                "description": "The unique identifier of the wait group to wait for completion. Must match the ID returned by a WG Create node.",
                "variableType": "String",
                "messageScope": true,
                "properties": {
                  "scope": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "uiSchema": {
            "inWaitGroupID": {
              "ui:field": "variable"
            }
          },
          "formData": {
            "inWaitGroupID": {
              "scope": "Message",
              "name": "wg_id"
            }
          }
        }
      ]
    }
  ]
}