      "icon": "refresh-ccw",
      "id": "Core.Programming.ForEach",
      "version": "23.6.3",
      "inputs": 1,
      "outputs": 2,
      "properties": [
        {
          "schema": {
            "title": "Options",
            "type": "object",
            "properties": {
              "optInput": {
                "type": "object",
                "title": "Loop through object",
                "description": "The array to iterate through. Each element will be processed one at a time in the connected workflow.",
                "variableType": "Array",
                "messageScope": true,
                "properties": {
                  "scope": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                }
              },
              "optOutput": {
                "type": "object",
                "title": "Current Item",
                "description": "Variable name where the current array item will be stored in the message during each iteration.",
                "variableType": "String",
                "messageScope": true,
                "messageOnly": true,
                "properties": {
                  "scope": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                }
              },
              "optIndex": {
                "type": "object",
                "title": "Current Index",
                "description": "Variable name where the current array index (0-based) will be stored in the message during each iteration.",
                "variableType": "String",
                "messageScope": true,
                "messageOnly": true,
                "properties": {
                  "scope": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "uiSchema": {
            "optInput": {
              "ui:field": "variable"
            },
            "optOutput": {
              "ui:field": "variable"
            },
            "optIndex": {
              "ui:field": "variable"
            }
          },
          "formData": {
